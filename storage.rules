rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Uploads folder - users can upload and read their own files
    match /uploads/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Private folder - users can only access their own files
    match /private/{userId}/{allPaths=**} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Public folder - anyone authenticated can read
    match /public/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins should write here (add admin check later)
    }
  }
}

